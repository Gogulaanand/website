{
  "defaultConnection": "default",
  "connections": {
    "default": {
      "connector": "mongoose",
      "settings": {
        "host": "${process.env.DATABASE_HOST}",
        "srv": true,
        "port": 27017,
        "database": "strapi",
        "username": "${process.env.DATABASE_USERNAME}",
        "password": "${process.env.DATABASE_PASSWORD}"
      },
      "options": {
        "authenticationDatabase": "${process.env.AUTHENTICATION_DATABASE}",
        "ssl": true
      }
    }
  }
}